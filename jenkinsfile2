pipeline {
    agent any
    
    environment {
        ANSIBLE_INVENTORY = '/home/ec2-user/jenkins/workspace/nodejs-setup/hosts.ini'
        ANSIBLE_PLAYBOOK = '/home/ec2-user/jenkins/workspace/nodejs-setup/02-setup-nodejs.yml'
    }

    stages {
        stage('Checkout Main Branch Code') {
            steps {
                git branch: 'main',
                credentialsId: 'github',
                url: 'https://github.com/TWhilst/Node-js-chat-app.git'
            }
        }

        stage('Checkout Ansible Branch Code') {
            steps {
                git branch: 'ansible',
                credentialsId: 'github',
                url: 'https://github.com/TWhilst/Node-js-chat-app.git'
            }
        }
        
         stage('Deploy to Server') {
            steps {
                ansiblePlaybook(
                    playbook: ANSIBLE_PLAYBOOK,
                    inventory: ANSIBLE_INVENTORY,
                )
            }
        }
    }
}