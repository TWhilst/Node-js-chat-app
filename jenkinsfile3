pipeline {
    agent any
    
    environment {
        ANSIBLE_INVENTORY = '/home/ec2-user/jenkins/workspace/chatapp-setup/hosts.ini'
        ANSIBLE_PLAYBOOK = '/home/ec2-user/jenkins/workspace/chatapp-setup/03-setup-chat-app.yml'
        jsFile = '/home/ec2-user/jenkins/workspace/chatapp-setup/app.js'
        htmlFile = '/home/ec2-user/jenkins/workspace/chatapp-setup/index.html'
        jsonFile = '/home/ec2-user/jenkins/workspace/chatapp-setup/package.json'
    }

    stages {
        stage('Checkout Main Branch Code') {
            steps {
                git branch: 'main',
                credentialsId: 'github',
                url: 'https://github.com/TWhilst/Node-js-chat-app.git'
            }
        }

        stage('Checkout Ansible Branch Code') {
            steps {
                git branch: 'ansible',
                credentialsId: 'github',
                url: 'https://github.com/TWhilst/Node-js-chat-app.git'
            }
        }
        
         stage('Deploy to Server') {
            steps {
                ansiblePlaybook(
                    playbook: ANSIBLE_PLAYBOOK,
                    inventory: ANSIBLE_INVENTORY,
                    extraVars: [
                        jsFile: jsFile,
                        htmlFile: htmlFile,
                        jsonFile: jsonFile,
                    ]
                )
            }
        }
    }
}